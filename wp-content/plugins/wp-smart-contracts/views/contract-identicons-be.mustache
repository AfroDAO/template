{{#blockie}}
	<img src="{{blockie}}" class="wpscMiniBlockies">
{{/blockie}}
<span class="wpscQR">
	<i class="copy icon" onclick="copyToClipboard('{{contract}}', 'wpsc-qr-{{id}}')"></i>
	<a href="{{etherscan}}address/{{contract}}" target="_blank">
		{{short-contract}}
	</a>
</span>
{{#qr-code}}
<span class="ui showQRPopup" data-offset="50" data-html='<div class="qr-popup-cpt"><img src="{{qr-code}}" class="ui centered small image"><p>&nbsp;</p><div class="ui bottom attached tiny label wpsc-centered">{{contract}}</div></div>'>
	<div class="ui icon button" style="max-width: 50px">
		<i class="qrcode icon"></i>
	</div>
</span>
{{/qr-code}}
<span id="wpsc-qr-{{id}}"></span>



